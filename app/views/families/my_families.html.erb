<div class="container">
  <h2 class="family">My Families</h2>
    <div class="row rounded">
      <% @families.each do |family| %>
        <div class="col-lg-4 col-md-12 d-flex justify-content-center">
          <div class="card my-4" style="width: 19rem; border: solid #7353B7">
            <%= link_to family_path(family) do %>
              <div class="card-img-top">
                <% if family.photo.attached? %>
                  <%= cl_image_tag family.photo.key, width: '100%', height: 180 %>
                <% end %>
                <div class="card-body w-100">
                  <h4 class="card-title"><%=family.family_name%></h4>
                  <p class="card-text "><%=family.description.first(30)%>...</p>
                  <div class="mt-2 d-flex justify-content-center">
                  <a class="btngeral" type="button" data-bs-toggle="modal" data-bs-target="#modalNewFamily">
                   Add new members
                  </a>
                  </div>
                </div>
              </div>
            <%end%>
          </div>
        </div>
      <%end%>
    </div>
</div>

<!-- Modal New Member -->

<div class="modal fade" id="modalNewFamily" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
     <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
          <div class="modal-body">

              <div class="justify-content-center">
                <h3 class="text-center">Add a member</h3>
                  <%= simple_form_for [@family, @user_family] do |f| %>
                <div class="form-inputs">
                      <%= f.input :user, collection: @users %>
                </div>
                <div class="form-actions">
                      <%= f.button :submit, "Submit" %>
                </div>
                  <% end %>
                <%= link_to "Back", my_families_path %>
              </div>

         </div>
    </div>
  </div>
</div>
