<!-- Modal New Member -->

<div class="modal fade" id="modalNewFamily-<%= family.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
     <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
     </div>
     <div class="modal-body">
        <div class="justify-content-center">
          <h3 class="text-center">Add a member</h3>
          <%= simple_form_for [family, user_family] do |f| %>
          <div class="form-inputs">
            <%= f.input :user, collection: @users %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Submit" %>
          </div>
            <% end %>
            <%#= link_to "Back", my_families_path %>
        </div>
      </div>

    </div>

  </div>
</div>
