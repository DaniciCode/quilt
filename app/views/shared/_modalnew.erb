<div class="modal fade" id="family-<%= family.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></i></button>
          </div>
              <div class="modal-body card">

                <div class="container">
                  <div class="row">
                    <% @families.each do |family| %>
                    <div class="col-4">
                      <div class="card my-2">
                        <%= link_to family_path(family) do %>
                          <div class="card-img-top">
                              <% if family.photo.attached? %>
                              <%= cl_image_tag family.photo.key, width: 410, height: 180 %>
                              <% end %>
                              <div class="card-body">
                              <h4 class="card-title"><%=family.family_name%></h4>
                              <p class="card-text"><%=family.description.first(100)%></p>
                              <p class="card-text"><%= link_to "Create new family", new_family_path %></p>
                            </div>
                          </div>
                              <%end%>
                        </div>
                      </div>
                      <%end%>
                  </div>
                </div>
              </div>
            </div>
      </div>
  </div>
</div>
