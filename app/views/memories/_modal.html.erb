<div class="modal fade" id="memory-<%= memory.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></i></button>
      </div>
      <div class="modal-body">
        <div class="d-flex justify-content">
         <div>
           <% if  memory.photo.attached? %>
            <%=cl_image_tag memory.photo.key, width: 300  %>
           <% end %>
         </div>
         <div>
            <h4><%= memory.title%></h4>
            <p><%= memory.description%></p>
            <p><%= memory.date%></p>
            <p><%= memory.location%></p>
         </div>
        </div>


        <div class="sm-sl trash">
             <%= link_to memory, method: :delete, data: { confirm: 'Are you sure?' } do %>
             <i class="fas fa-trash icon-trash"></i>
             <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
