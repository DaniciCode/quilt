<div class="d-flex justify-content-center">
  <div class="container-new">
    <h3 class="text-center">Add a new scrapbook</h3>
     <%= simple_form_for [@scrapbook],url:family_scrapbooks_path do |f| %>
     <div class="form-inputs">
        <%= f.input :scrapbook_title %>
        <%= f.input :scrapbook_description %>
        <%= f.input :photo, as: :file  %>
        <%= f.input :current_user.@memories %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Build a new scrapbook" %>
      </div>
      <% end %>
      <%= link_to "Back", my_families_path %>
</div>

</div>
