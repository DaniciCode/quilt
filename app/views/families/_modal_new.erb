<div class="modal fade" id="family-<%= family.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></i></button>
      </div>
      <div class="modal-body card">
        <div class="d-colum justify-content-center">
           <% if  family.photo.attached? %>
            <%=cl_image_tag family.photo.key, width: 450, class: "family-image-model" %>
           <% end %>
        </div>
        <div class="d-colum justify-content-center mt-3 px-4">
            <h4><%= family.family_name%></h4>
            <p><%= family.description%></p>
        </div>
      </div>
        <div class="sm-sl trash ">
             <%= link_to memory, method: :delete, data: { confirm: 'Are you sure?' } do %>
             <i class="fas fa-trash icon-trash"></i>
             <% end %>
        </div>
    </div>
  </div>
</div>


<%= simple_form_for [@family],url:families_path do |f| %>
     <div class="form-inputs">
      <%= f.input :family_name %>
      <%= f.input :description %>
      <%= f.input :photo, as: :file  %>
      </div>
      <div class="form-actions">
      <%= f.submit %>
      </div>
      <% end %>
